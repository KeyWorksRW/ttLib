Options:
  Project: ttLib
  TargetDirs:  ../lib	# both 32-bit and 64-bit libaries will be built here
  PCH: pch.h			# "none" or name of header file to use for precompilation
  exe_type:	  lib		# [window | console | lib | dll]
  64Bit:	  true		# create 64-bit project as well as 32-bit project
  bit_suffix: true		# add "64" to the end of the project name (e.g., ttLib64.lib) for 64-bit builds
  WarnLevel:  4			# compiler warning level (1-4) (default if not specified is 4)
  optimize:	  space		# speed or space (default)

Files:
  pch.cpp

  enumstr.cpp			# ttEnumStr class
  filedir.cpp			# file and directory handling
  hashpair.cpp			# ttHashPair
  misc.cpp				# miscellaneous functions
  multithread.cpp		# ttMultiThrd class
  ttdebug.cpp			# debug and assertion handling
  ttfile.cpp			# ttFile class
  ttheap.cpp			# ttHeap class
  ttlist.cpp			# ttList class
  ttprintf.cpp			# printf
  ttstr.cpp				# string handling and ttStr class
  ttstring.cpp			# ttString class
  ttwstring.cpp			# ttWString class
  ttxml.cpp				# ttXML class

# _WINDOWS_ only files

  filedlg.cpp			# ttFileDlg class
  ttdlg.cpp				# ttDlg class
  winmisc.cpp			# miscellaneous functions for use on Windows
