Options:
    Project:     ttLibMD      # project target name
    exe_type:    lib          # [window | console | lib | dll]
    PCH:         pch.h        # precompiled header
    PCH_CPP:     ../src/pch.cpp     # source file used to build precompiled header

    CFlags:     -D_MT -D_DLL

    IncDirs: ../src

    64Bit:       true         # create 64-bit project as well as 32-bit project
    TargetDir64: ../lib64     # 64-bit target directory
    32Bit:       true         # if true, build 32-bit target
    TargetDir32: ../lib32     # 32-bit target directory

Files:
    .include ../src/.srcfiles
